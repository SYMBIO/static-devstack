{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "cl": true,
    "PRODUCTION": true,
    "DEVELOPMENT": true,
    "module": true
  },
  "rules": {
    "class-methods-use-this": [0],
    "global-require": [0],
    "indent": ["error", 4, {"SwitchCase": 1}],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "ignore"
    }],
    "no-console": [0],
    "no-extra-semi": ["error"],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-shadow": [0],
    "no-trailing-spaces": ["error"],
    "no-unused-vars": [2, {"varsIgnorePattern": "^_"}],
    "wrap-iife": [2, "inside"]
  },
  "extends": [
    "eslint:recommended"
  ],
  "plugins": []
}
