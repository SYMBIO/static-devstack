{ 
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "cl": true,
    "PRODUCTION": true,
    "DEVELOPMENT": true
  },  
  "rules": {
    "indent": ["error", 4],
    "space-before-function-paren": ["error", {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "ignore"
    }],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "wrap-iife": [2, "inside"],
    "no-shadow": [0]    
  },
  "extends": "airbnb-base/legacy"
}